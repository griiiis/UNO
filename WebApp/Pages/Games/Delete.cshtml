@page
@model WepApp.Pages_Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.CreatedAtDt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.CreatedAtDt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.UpdatedAtDt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.UpdatedAtDt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName(Model.Game.Players!.Count.ToString()) Players
        </dt>
        <dd class="col-sm-10">
            @foreach (var player in Model.Game.Players!)
            {
                var playerLabel = player.NickName + "(" + player.PlayerType + ") ";
                @Html.DisplayName(playerLabel)
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index">Back</a>
    </form>
</div>